{
	"servers": {
		"monarch-money-mcp-enhanced": {
			"type": "stdio",
			"command": "uv",
			"cwd": "${workspaceFolder}",
			"args": [
				"run",
				"python",
				"server.py"
			],
			"env": {
				"MONARCH_EMAIL": "your-email@example.com",
				"MONARCH_PASSWORD": "your-password",
				// See readme for this
				"MONARCH_MFA_SECRET": "your-mfa-secret-key"
			}
		}
	}
}